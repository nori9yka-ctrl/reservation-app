    function renderBookings() {
      const tbody = document.getElementById('booking-list-body');
      let html = "";
      bookingsData.forEach(b => {
        html += `
          <tr>
            <td>${b.id}</td>
            <td>${b.date}</td>
            <td>${b.name}</td>
            <td>${b.phone}</td>
            <td>${b.bike}</td>
            <td>${b.start}<br>~ ${b.end}</td>
            <td>Â¥${b.price.toLocaleString()}</td>
            <td>
              <button class="btn btn-sm btn-print" onclick="openPrintWindow('${b.id}')">ğŸ–¨ è²¸æ¸¡è¨¼</button>
            </td>
          </tr>
        `;
      });
      tbody.innerHTML = html;
    }

    // --- è»Šä¸¡ãƒªã‚¹ãƒˆæç”» ---
    function renderVehicles() {
      const tbody = document.getElementById('vehicle-list-body');
      let html = "";
      const today = new Date();
      const warningLimit = new Date(); 
      warningLimit.setDate(today.getDate() + 30); 

      vehiclesData.forEach(v => {
        let insClass = "text-success";
        const insDate = new Date(v.insurance);
        if (insDate < today) insClass = "text-danger";
        else if (insDate < warningLimit) insClass = "text-warning";

        let inspClass = "text-success";
        let inspText = v.inspection;
        if (v.inspection !== "-") {
          const inspDate = new Date(v.inspection);
          if (inspDate < today) inspClass = "text-danger";
          else if (inspDate < warningLimit) inspClass = "text-warning";
        } else { inspClass = ""; }

        let oilClass = "text-success";
        if (v.km >= v.nextOil) oilClass = "text-danger";
        else if (v.km >= v.nextOil - 500) oilClass = "text-warning";

        let statusBadge = v.status === "active" ? '<span class="badge bg-green">è²¸å‡ºå¯</span>' : '<span class="badge bg-red">ãƒ¡ãƒ³ãƒ†ä¸­</span>';

        html += `
          <tr>
            <td>${v.id}</td>
            <td><div style="font-weight:bold;">${v.name}</div><div style="font-size:0.85rem; color:#666;">No: ${v.plate}</div></td>
            <td>${v.km.toLocaleString()} km</td>
            <td class="alert-cell ${insClass}">${v.insurance}</td>
            <td class="alert-cell ${inspClass}">${inspText}</td>
            <td class="alert-cell ${oilClass}">æ¬¡å›: ${v.nextOil.toLocaleString()} km</td>
            <td>${statusBadge}</td>
            <td><button class="btn btn-sm btn-outline">ç·¨é›†</button></td>
          </tr>
        `;
      });
      tbody.innerHTML = html;
    }

