    // --- ç”»é¢åˆ‡ã‚Šæ›¿ãˆ ---
    function switchView(viewId) {
      document.querySelectorAll('.view-section').forEach(el => el.classList.remove('active'));
      document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
      document.getElementById(viewId).classList.add('active');
      const items = document.querySelectorAll('.nav-item');
      if(viewId==='dashboard') items[0].classList.add('active');
      if(viewId==='bookings') items[1].classList.add('active');
      if(viewId==='vehicles') items[2].classList.add('active');
      if(viewId==='calendar') items[3].classList.add('active');
      if(viewId==='settings') items[4].classList.add('active');
      if(viewId==='calendar') setTimeout(() => { calendar.render(); }, 100);
    }

